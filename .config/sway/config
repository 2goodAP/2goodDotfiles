# Start swayidle for screen locking
exec --no-startup-id swayidle -w \
            timeout 540 'swaymsg "output * dpms off"' \
                resume 'swaymsg "output * dpms on"' \
            timeout 600 'swaylock -f' \
            before-sleep 'swaylock -f'

# Start Waybar
exec_always --no-startup-id $scripts_dir/launch-waybar.sh

# Desktop background with output
output eDP-1 bg ~/Pictures/keep_on_keeping_on.jpg stretch

# Use swayidle.service in userspace to lock sway session on systemd-events
exec --no-startup-id systemctl --user start swayidle.service

# Start redshift-wlroots
exec --no-startup-id redshift

# Start the clipman daemon
exec wl-paste -p --watch clipman store --max-items=30 --histpath="~/.local/share/clipman-primary.json" 
exec wl-paste --watch clipman store --max-items=30

# Auto-import gtk settings from $XDG_CONFIG_HOME/gtk-3.0/settings.ini
exec_always $scripts_dir/import-gsettings.sh \
    gtk-theme:gtk-theme-name \
    icon-theme:gtk-icon-theme-name \
    cursor-theme:gtk-cursor-theme-name

