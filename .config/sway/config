# Screenshot using grim with slurp
set $screenshot_path ~/Pictures/Screenshots/screenshot_`date +%y-%m-%d_%H:%M:%S`.png

bindsym Print exec swaymsg -t get_tree | jq -r '.. | select(.pid? and .visible?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | slurp | grim -g - -t png $screenshot_path | wl-copy

bindsym $mod+Print exec grim -g "$(slurp)" $screenshot_path | wl-copy

bindsym $mod+Shift+Print grim -t png $screenshot_path | wl-copy

# i3blocks requirements for NUM and CAPS indicators
# bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
# bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

# PulseAudio controls
# Change volume or toggle mute
#
set $refresh_i3blocks pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks

# Sreen brightness controls
#
# Increase screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl --quiet s 5%+
# Decrease screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --quiet s 5%-

