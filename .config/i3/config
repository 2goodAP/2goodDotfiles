####################################################################################
# Startup manager                                                                  #
####################################################################################
#
# Start polybar
exec_always --no-startup-id $scripts_dir/launch-polybar.sh

# Desktop background with feh
exec --no-startup-id feh --bg-scale $HOME/Pictures/keep_on_keeping_on.jpg

# xset s <n1> <n2>
# n1: is the time it takes to launch the first signal that the screen will be
# shutdown. Here we generally dim the screen a bit.
# n2: is the time after n1 that we launch the second signal.
# Here we lock the screen.
# With n1 = 60 and n2 = 30 the screen will be dimmed 60 seconds after the last
# time pc was not idle and 30 seconds later (90 seconds from last non-idle 
# state) the screen will be locked.
exec --no-startup-id xset s 300 300
 
# xset dpms <n>
# n: is the time from last non-idle state after which the screen will be shutdown. 
exec --no-startup-id xset dpms 600

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend.
exec --no-startup-id xss-lock -n $scripts_dir/dim-screen.sh \
    -- betterlockscreen --lock dimblur

# Nm-applet
exec_always --no-startup-id nm-applet

# Autostart redshift
exec --no-startup-id redshift-gtk

# Start picom
exec_always --no-startup-id picom --dbus -f

# Start the greenclip daemon
exec_always --no-startup-id sh $scripts_dir/start-greenclip-daemon.sh

# Toggle redshift
bindsym Alt+End exec pkill -USR1 redshift

